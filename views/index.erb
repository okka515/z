<div id="authed-main-header">
  <p>ポスト</p>    
</div>
<form action="/post-content" method="POST" id="post-form">
  <textarea type="text" name="content" placeholder="いまなにしてる？"></textarea>
  <button type="submit">ポストする</button>
</form>
<!-- 穴埋めをしよう -->
<% @post.each do |_post| %>
  <a href="/post/<%= _post.id %>"  class="post">
    <div class="post-info">
      <p class="post-user-name"><%= _post.user.name %></p>
      <p class="post-user-id">@<%= _post.user_id %></p>
      <p class="post-created-at"><%= format_date(_post.created_at) %></p>
    </div>
    <p><%= _post.content %></p>
    <div class="post-comment-info">
      <img src="/img/comment.svg" alt="comment" width="21px" height="21px">
      <p><%= _post.comments.size %></p>
    </div>
  </a>
<% end %>